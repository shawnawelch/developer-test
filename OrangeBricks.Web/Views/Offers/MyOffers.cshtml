@model IEnumerable<OrangeBricks.Web.Controllers.Offers.ViewModels.MyOfferViewModel>

@{
    ViewBag.Title = "My Offers";
}

<h2>My Offers</h2>

@if (Model != null && Model.Count() > 0)
{    
    <div class="row">
    @foreach (var offer in Model)
    {
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@offer.PropertyType - @offer.StreetName</h3>
                </div>
                <div class="panel-body">
                    <p><strong>Offer Amount: </strong> £@offer.Amount</p>
                    <p><strong>Offer Made At: </strong> @offer.CreatedAt.ToShortTimeString() on @offer.CreatedAt.ToLongDateString()</p>
                    <p><strong>Status: </strong> @offer.Status</p>
                </div>
            </div>
        </div>        
    }
    </div>    
}
else
{
    <div class="alert alert-info text-center" role="alert">
        <a href="@Url.Action("Index", "Property")">View properties to make an offer...</a>
    </div>
}

